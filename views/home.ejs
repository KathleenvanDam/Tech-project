            <label for="age">Leeftijd</label>
            <input id="age" type="range" name="age" value="0" min="16" max="30"
                oninput="this.nextElementSibling.value = this.value">
            <output>0</output>
            <label for="year">Jaarlaag</label>
            <select id="year" name="year">
                <option value=1>Jaar 1</option>
                <option value=2>Jaar 2</option>
                <option value=3>Jaar 3</option>
                <option value=4>Jaar 4</option>
            </select>
            <input type="submit" id="sendBtn">
        </form>
    </section>
